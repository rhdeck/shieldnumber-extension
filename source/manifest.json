{
	"name": "ShieldNumber",
	"version": "1.0.0",
	"description": "Auto-fill extension for shieldnumber",
	"homepage_url": "https://github.com/rhdeck/shieldnumber-extension",
	"manifest_version": 2,
	"minimum_chrome_version": "74",
	"applications": {
		"gecko": {
			"id": "shieldnumber@shieldnumber.com",
			"strict_min_version": "67.0"
		}
	},
	"icons": {
		"128": "icon.png"
	},
	"permissions": ["storage", "contextMenus"],
	"background": {
		"persistent": true,
		"scripts": ["background.ts"]
	},
	"content_scripts": [
		{
			"matches": [
				"https://app.shieldnumber.com/**",
				"http://localhost:3000/**"
			],
			"matches_": ["https://*/**", "http://*/**"],
			"js": ["shieldnumber.ts"]
		},
		{
			"exclude_matches": [
				"https://app.shieldnumber.com/**",
				"http://localhost:3000/**"
			],
			"matches": ["https://*/**", "http://*/**"],
			"js": ["content.ts"],
			"css": ["content.css"]
		}
	],
	"browser_action": {
		"default_popup": "popup.html",
		"default_title": "ShieldNumber"
	},
	"web_accessible_resources": ["icon.png"]
}
